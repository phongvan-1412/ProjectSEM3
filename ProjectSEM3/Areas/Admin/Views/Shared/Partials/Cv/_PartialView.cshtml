@using ProjectSEM3.Models.Entities;

@{
    var data = Model as List<Contestant.Res>;
}

@if (data == null || data.Count() <= 0)
{
    <h3>No records found.</h3>
}

else
{
    <div class="mt-3">
        <table id="cvTable" class="table table-striped table-hover">
            <thead class="text-bg-dark">
                <tr colspan="7">
                    <th style="width:5%">#</th>
                    <th style="width:20%">Name</th>
                    <th style="width:23%">Job Title</th>
                    @*<th style="width:10%">Email</th>*@
                    <th style="width:10%">Contact</th>
                    <th style="width:17%">Created Date</th>
                    <th style="width:5%">Status</th>
                    <th style="width:20%">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var index = 1;
                }
                @foreach (var item in data)
                {
                    <tr>
                        <td>@index@{index++;}</td>
                        <td>@item.Name</td>
                        <td><a href="@item.JobLink">@item.JobTitle</a></td>
                        @*<td>@item.Email</td>*@
                        <td>@item.Contact</td>
                        <td>@item.DatePosted</td>
                        <td><span class="@item.StatusType.BadgeCss">@item.StatusType.Name</span></td>
                        <td>
                            @{
                                var json = Newtonsoft.Json.JsonConvert.SerializeObject(item);
                            }
                            @if (@item.StatusType.IsHidden)
                            {
                                <i class="fa-solid fa-user fa-2x pointer" data-bs-toggle="modal" data-index="@item.Id" data-cv="@json" data-bs-target="#newContest" onclick="OnSelectRowCv(event)" hidden></i>
                            }
                            else
                            {
                                <i class="fa-solid fa-user fa-2x pointer" data-bs-toggle="modal" data-index="@item.Id" data-cv="@json" data-bs-target="#newContest" onclick="OnSelectRowCv(event)"></i>
                            }
                            <i class="fa-sharp fa-solid fa-circle-info fa-2x pointer ms-3" style="color: dodgerblue;" data-bs-toggle="modal" data-bs-target="#infoCv" data-cv="@json" onclick="OnViewCv(event)"></i>
                            <a href="@item.Cv"><i class="fa-regular fa-file-pdf fa-2x pointer ms-3"> </i></a>

                            @if (@item.StatusType.IsHidden)
                            {
                                <i class="fa-solid fa-trash-can fa-2x pointer ms-3" style="color: red;" data-index="@item.Id" data-cv="@json" onclick="OnChangeCvStatus(event)" hidden></i>
                            }
                            else
                            {
                                <i class="fa-solid fa-trash-can fa-2x pointer ms-3" style="color: red;" data-index="@item.Id" data-cv="@json" onclick="OnChangeCvStatus(event)"></i>
                            }
                        </td>
                    </tr>


                }
            </tbody>
        </table>
    </div>
}
@Html.Partial("~/Areas/Admin/Views/Shared/Partials/Cv/_PartialNewContest.cshtml")
@Html.Partial("~/Areas/Admin/Views/Shared/Partials/Cv/_PartialInfo.cshtml")


