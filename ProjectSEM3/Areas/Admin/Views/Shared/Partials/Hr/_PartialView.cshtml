@using ProjectSEM3.Models.Entities;

@{
    var data = Model as List<Hr.Res>;
}

@if (data.Count() <= 0)
{
    <h3>No records found.</h3>
}

else
{
    <div class="mt-3">
        <table id="hrTable" class="table table-striped table-hover">
            <thead class="text-bg-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in data)
                {
                    <tr >
                        <td>
                            @{
                                var a = data.IndexOf(item) + 1;
                            }
                            @a
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>
                            @if (@item.Status)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Deleted</span>
                            }
                        </td>
                        <td>
                            @{
                                var json = Newtonsoft.Json.JsonConvert.SerializeObject(item);
                            }
                            <i class="fa-solid fa-pen-to-square fa-2x pointer" style="color:forestgreen" data-bs-toggle="modal" data-bs-target="#updateHr" data-index="@item.Id" data-hr="@json" onclick="OnSelectRowHr(event)"></i>
                            <i class="fa-sharp fa-solid fa-circle-info fa-2x pointer ms-3" style="color: dodgerblue;" data-bs-toggle="modal" data-bs-target="#infoHr" data-hr="@json" onclick="OnViewHr(event)"></i>
                            @if (@item.Status)
                            {
                                <i class="fa-solid fa-trash-can fa-2x pointer ms-3" style="color: red;" data-index="@item.Id" data-hr="@json" onclick="OnChangeHrStatus(event)"></i>
                            }
                            else
                            {
                                <i class="fa-solid fa-trash-can fa-2x pointer ms-3" style="color: red;" data-index="@item.Id" data-hr="@json" onclick="OnChangeHrStatus(event)" hidden></i>
                            }
                        </td>
                    </tr>


                }
            </tbody>
        </table>
    </div>
}
@Html.Partial("~/Areas/Admin/Views/Shared/Partials/Hr/_PartialUpdate.cshtml")
@Html.Partial("~/Areas/Admin/Views/Shared/Partials/Hr/_PartialInfor.cshtml")

