@using ProjectSEM3.Models.Entities;

@{
    var data = Model as List<Question.Res>;
}

@if (data == null || data.Count() <= 0)
{
    <h3>No records found.</h3>
}
else
{
    <div class="mt-3">
        <table id="questionTable" class="table table-striped table-hover">
            <thead class="text-bg-dark">
                <tr colspan="6">
                    <th style="width:5%">#</th>
                    <th style="width:50%">Content</th>
                    <th>Type</th>
                    <th>Level</th>
                    <th>Exam</th>
                    <th style="width:5%">Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in data)
                {
                    <tr>
                        @{
                            var index = 1;
                        }
                        <td>@index@{index++;}</td>
                        <td>@item.Content</td>
                        <td>@item.TypeName</td>
                        <td>@item.LevelName</td>
                        <td>@item.ExamTypeName</td>
                        <td><span class="@item.StatusType.BadgeCss">@item.StatusType.Name</span></td>
                        <td>
                            @{
                                var json = Newtonsoft.Json.JsonConvert.SerializeObject(item);
                            }
                            <i class="fa-solid fa-pen-to-square fa-2x pointer" style="color:forestgreen" data-bs-toggle="modal" data-bs-target="#updateQuestion" data-index="@item.Id" data-question="@json" onclick="OnSelectRowQuestion(event)"></i>
                            <i class="fa-sharp fa-solid fa-circle-info fa-2x pointer ms-3" style="color: dodgerblue;" data-bs-toggle="modal" data-bs-target="#infoQuestion" data-question="@json" onclick="OnViewQuestion(event)"></i>
                            @if (@item.StatusType.IsHidden)
                            {
                                <i class="fa-solid fa-trash-can fa-2x pointer ms-3" style="color: red;" data-index="@item.Id" data-question="@json" onclick="OnChangeQuestionStatus(event)" hidden></i>
                            }
                            else
                            {
                                <i class="fa-solid fa-trash-can fa-2x pointer ms-3" style="color: red;" data-index="@item.Id" data-question="@json" onclick="OnChangeQuestionStatus(event)"></i>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
@Html.Partial("~/Areas/Admin/Views/Shared/Partials/Question/_PartialUpdate.cshtml")
@Html.Partial("~/Areas/Admin/Views/Shared/Partials/Question/_PartialInfo.cshtml")

