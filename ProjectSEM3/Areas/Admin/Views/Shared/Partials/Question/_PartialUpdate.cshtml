@using ProjectSEM3.Models.Entities;

@{
    var types = ViewBag.Types as List<QuestionType.Res>;
    var levels = ViewBag.Levels as List<Level.Res>;
    var examTypes = ViewBag.ExamTypes as List<ProjectSEM3.Models.Entities.Type.Res>;
}


<div id="updateQuest" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Update Question</h4>
                <i class="fa-solid fa-rectangle-xmark fa-2x pointer" data-bs-dismiss="modal"></i>
            </div>

            <div class="modal-body">
                <div class="col-12">
                    <div class="row">
                        <div class="col-2 m-1">
                            <span><b>Type</b> <i style="color:red">*</i></span>
                            <div id="typeUpdate"></div>
                        </div>
                        <div class="col-2 m-1">
                            <span><b>Level</b> <i style="color:red">*</i></span>
                            <select class="form-select" id="levelUpdate">
                                <option value="0" selected hidden>Level</option>
                                @foreach (var item in levels)
                                {
                                    <option class="pointer" value="@item.Id">@item.Name</option>
                                }
                            </select>
                            <span id="levelErr" style="color:red;font-size:12px;position:absolute"></span>
                        </div>

                        <div class="col-3 m-1">
                            <span><b>Exam Type</b> <i style="color:red">*</i></span>
                            <select class="form-select" id="examTypesUpdate">
                                <option value="0" selected hidden>Exam Type</option>
                                @foreach (var item in examTypes)
                                {
                                    <option class="pointer" value="@item.Id">@item.Name</option>
                                }
                            </select>
                            <span id="examTypesErr" style="color:red;font-size:12px;position:absolute"></span>
                        </div>

                        <div class="col-2 m-1">
                            <span><b>Point</b> <i style="color:red">*</i></span>
                            <select class="form-select" id="pointUpdate">
                                <option value="0" selected hidden>Point</option>
                                <option class="pointer" value="1">1</option>
                                <option class="pointer" value="2">2</option>
                                <option class="pointer" value="3">3</option>
                                <option class="pointer" value="4">4</option>
                                <option class="pointer" value="5">5</option>
                            </select>
                            <span id="pointErr" style="color:red;font-size:12px;position:absolute"></span>
                        </div>
                        <div class="col-2 m-1">
                            <span><b>Multiselect</b> <i style="color:red">*</i></span>
                            <div class="form-check">
                                <input class="form-check-input pointer" type="checkbox" id="isMultiSelectUpdate" onclick="OnMultiSelectedUpdate(event)">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <span><b>Content</b> <i style="color:red">*</i></span>
                            <textarea class="form-control p-0 ckEditor" onblur="CheckContentUpdate()" placeholder="" name="isCorrectAnswer" id="contentUpdate" rows="3"></textarea>
                            <span id="contentUpdateErr" style="color:red;font-size:12px;position:absolute"></span>
                        </div>
                    </div>
                    <hr />

                    <div id="normalUpdateView">
                        <div class="row">
                            <div class="col-12">
                                <div class="row">
                                    <span class="col-1"><b>A</b> <i style="color:red">*</i></span>
                                    <div class="form-check col-6 isCorrectAnswerUpdateWrap">
                                        <input class="form-check-input pointer isCorrectAnswerUpdate" name="isCorrectAnswer" id="" type="radio" value="">
                                        <label class="form-check-label pointer" for="isCorrectAnswer" onclick="OnIsCorrectTextClick(event)">
                                            Is Correct Answer
                                        </label>
                                    </div>
                                </div>
                                <textarea class="form-control p-0 ckEditor" onblur="CheckAnswerAUpdate()" placeholder="" id="answerAUpdate" rows="3"></textarea>
                                <span id="answerAUpdateErr" style="color:red;font-size:12px;position:absolute"></span>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-12">
                                <div class="row">
                                    <span class="col-1"><b>B</b> <i style="color:red">*</i></span>
                                    <div class="form-check col-6 isCorrectAnswerUpdateWrap">
                                        <input class="form-check-input pointer isCorrectAnswerUpdate" name="isCorrectAnswer" id="" type="radio" value="">
                                        <label class="form-check-label pointer" for="isCorrectAnswer" onclick="OnIsCorrectTextClick(event)">
                                            Is Correct Answer
                                        </label>

                                    </div>
                                </div>
                                <textarea class="form-control p-0 ckEditor" onblur="CheckAnswerBUpdate()" placeholder="" id="answerBUpdate" rows="3"></textarea>
                                <span id="answerBUpdateErr" style="color:red;font-size:12px;position:absolute"></span>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-12">
                                <div class="row">
                                    <span class="col-1"><b>C</b> <i style="color:red">*</i></span>
                                    <div class="form-check col-6 isCorrectAnswerUpdateWrap">
                                        <input class="form-check-input pointer isCorrectAnswerUpdate" name="isCorrectAnswer" id="" type="radio" value="">
                                        <label class="form-check-label pointer" for="isCorrectAnswerCUpdate" onclick="OnIsCorrectTextClick(event)">
                                            Is Correct Answer
                                        </label>
                                    </div>
                                </div>
                                <textarea class="form-control p-0 ckEditor" onblur="CheckAnswerCUpdate()" placeholder="" id="answerCUpdate" rows="3"></textarea>
                                <span id="answerCUpdateErr" style="color:red;font-size:12px;position:absolute"></span>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-12">
                                <div class="row">
                                    <span class="col-1"><b>D</b> <i style="color:red">*</i></span>
                                    <div class="form-check col-6 isCorrectAnswerUpdateWrap">
                                        <input class="form-check-input pointer isCorrectAnswerUpdate" name="isCorrectAnswer" id="" type="radio" value="">
                                        <label class="form-check-label pointer" for="isCorrectAnswerDUpdate" onclick="OnIsCorrectTextClick(event)">
                                            Is Correct Answer
                                        </label>
                                    </div>
                                </div>
                                <textarea class="form-control p-0 ckEditor" onblur="CheckAnswerDUpdate()" placeholder="" id="answerDUpdate" rows="3"></textarea>
                                <span id="answerDUpdateErr" style="color:red;font-size:12px;position:absolute"></span>
                            </div>
                        </div>
                    </div>

                    <div id="crossUpdateView" hidden>
                        <div class="row">
                            <div class="col-5">
                                <div>
                                    <label for="exampleFormControlTextarea1" class="form-label"><b>a/</b> <i style="color:red">*</i></label>
                                    <textarea class="form-control p-0 ckEditor questCrossUpdate" onblur="CheckCrossQuestAUpdate()" rows="3"></textarea>
                                    <span id="crossQuestAUpdateErr" style="color:red;font-size:12px;position:absolute"></span>
                                </div>
                                <div>
                                    <label for="exampleFormControlTextarea1" class="form-label"><b>b/</b> <i style="color:red">*</i></label>
                                    <textarea class="form-control p-0 ckEditor questCrossUpdate" onblur="CheckCrossQuestBUpdate()" rows="3"></textarea>
                                    <span id="crossQuestBUpdateErr" style="color:red;font-size:12px;position:absolute"></span>
                                </div>
                                <div>
                                    <label for="exampleFormControlTextarea1" class="form-label"><b>c/</b> <i style="color:red">*</i></label>
                                    <textarea class="form-control p-0 ckEditor questCrossUpdate" onblur="CheckCrossQuestCUpdate()" rows="3"></textarea>
                                    <span id="crossQuestCUpdateErr" style="color:red;font-size:12px;position:absolute"></span>
                                </div>
                                <div>
                                    <label for="exampleFormControlTextarea1" class="form-label"><b>d/</b> <i style="color:red">*</i></label>
                                    <textarea class="form-control p-0 ckEditor questCrossUpdate" onblur="CheckCrossQuestDUpdate()" rows="3"></textarea>
                                    <span id="crossQuestDUpdateErr" style="color:red;font-size:12px;position:absolute"></span>
                                </div>
                            </div>
                            <div class="col-7">
                                <div>
                                    <label for="exampleFormControlTextarea1" class="form-label"><b>1/</b> <i style="color:red">*</i></label>
                                    <textarea class="form-control p-0 ckEditor answerCrossUpdate" onblur="CheckCrossAnswerAUpdate()" rows="3"></textarea>
                                    <span id="crossAnswerAUpdateErr" style="color:red;font-size:12px;position:absolute"></span>
                                </div>
                                <div>
                                    <label for="exampleFormControlTextarea1" class="form-label"><b>2/</b> <i style="color:red">*</i></label>
                                    <textarea class="form-control p-0 ckEditor answerCrossUpdate" onblur="CheckCrossAnswerBUpdate()" rows="3"></textarea>
                                    <span id="crossAnswerBUpdateErr" style="color:red;font-size:12px;position:absolute"></span>
                                </div>
                                <div>
                                    <label for="exampleFormControlTextarea1" class="form-label"><b>3/</b> <i style="color:red">*</i></label>
                                    <textarea class="form-control p-0 ckEditor answerCrossUpdate" onblur="CheckCrossAnswerCUpdate()" rows="3"></textarea>
                                    <span id="crossAnswerCUpdateErr" style="color:red;font-size:12px;position:absolute"></span>
                                </div>
                                <div>
                                    <label for="exampleFormControlTextarea1" class="form-label"><b>4/</b> <i style="color:red">*</i></label>
                                    <textarea class="form-control p-0 ckEditor answerCrossUpdate" onblur="CheckCrossAnswerDUpdate()" rows="3"></textarea>
                                    <span id="crossAnswerDUpdateErr" style="color:red;font-size:12px;position:absolute"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="m-2">
                        <button class="main-btn secondary-btn-outline btn-sm btn-hover float-end" type="button" onclick="OnUpdateQuestion()">Update</button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>