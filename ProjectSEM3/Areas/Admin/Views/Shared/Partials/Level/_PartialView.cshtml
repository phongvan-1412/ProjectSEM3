@using ProjectSEM3.Models.Entities;

@{
    ViewBag.Title = "Level";
    var data = ViewBag.Level as List<ProjectSEM3.Models.Entities.Level.Res>;
}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-1">
            <span><b>Name</b> <i style="color:red">*</i></span>
        </div>
        <div class="col-4">
            <input class="form-control p-1" id="idLevel" type="text" hidden>
            <input class="form-control p-1" id="nameLevel" type="text">
        </div>
        <div class="col-2">
            <button class="main-btn btn-sm primary-btn btn-hover" onclick="OnSubmitLevelType()">Submit</button>
        </div>
    </div>
</div>

@if (data == null || data.Count() <= 0)
{
    <h3>No records found.</h3>
}
else
{
    <div class="mt-3">
        <table id="levelTable" class="table table-striped table-hover">
            <thead class="text-bg-dark">
                <tr colspan="6">
                    <th style="width:5%">#</th>
                    <th style="width:20%">Name</th>
                    <th style="width:20%">Status</th>
                    <th style="width:20%">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var index = 1;
                }
                @foreach (var item in data)
                {
                    <tr>
                        <td>@index@{index++;}</td>
                        <td>@item.Name</td>
                        <td><span class="@item.StatusType.BadgeCss">@item.StatusType.Name</span></td>
                        <td>
                            @{
                                var json = Newtonsoft.Json.JsonConvert.SerializeObject(item);
                            }
                            <i class="fa-solid fa-pen-to-square fa-2x pointer" style="color:forestgreen" data-index="@item.Id" data-level="@json" onclick="OnSelectRowLevelType(event)"></i>
                            <i class="fa-solid fa-rotate fa-2x pointer ms-3" style="color: dodgerblue;" data-index="@item.Id" data-level="@json" onclick="OnChangeLevelTypeStatus(event)"></i>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


