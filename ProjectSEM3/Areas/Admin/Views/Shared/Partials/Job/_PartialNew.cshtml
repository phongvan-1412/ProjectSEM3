@using ProjectSEM3.Models.Entities;

@{
    var levels = ViewBag.Levels as List<Level.Res>;
}


<i class="fa-solid fa-square-plus pointer fa-3x float-end mb-3" data-bs-toggle="modal" data-bs-target="#newHr"></i>

<div id="newHr" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">New</h4>
                <i class="fa-solid fa-rectangle-xmark fa-2x pointer" data-bs-dismiss="modal"></i>
            </div>

            <div class="modal-body">
                <div class="col-12">
                    <div class="row">
                        <div class="col-6">
                            <div class="m-1">
                                <span><b>Title</b> <i style="color:red">*</i></span>
                                <input class="form-control p-1" id="title" type="text" placeholder="eg: " />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="m-1">
                                <span><b>Location</b> <i style="color:red">*</i></span>
                                <input class="form-control p-1" id="location" type="text" placeholder="eg: " />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-3">
                            <div class="m-1">
                                <span><b>End Date</b> <i style="color:red">*</i></span>
                                <input class="form-control p-1" id="endDate" type="date" placeholder="eg: " />
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="m-1">
                                <span><b>Min Salary</b> <i style="color:red">*</i></span>
                                <input class="form-control p-1" id="salaryMin" type="number" placeholder="eg: " />
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="m-1">
                                <span><b>Max Salary</b> <i style="color:red">*</i></span>
                                <input class="form-control p-1" id="salaryMax" type="number" placeholder="eg: " />
                            </div>
                        </div>
                        <div class="col-3">
                            <span><b>Level</b> <i style="color:red">*</i></span>
                            <select class="form-select" id="level">
                                <option value="0" selected hidden>Level</option>
                                @foreach (var item in levels)
                                {
                                    <option class="pointer" value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="m-1">
                        <span><b>Content</b> <i style="color:red">*</i></span>
                        <input class="form-control p-1" id="content" type="text" placeholder="eg:  " />
                    </div>

                    <div class="m-2">
                        <button class="main-btn secondary-btn-outline btn-sm float-end" type="button" onclick="OnNewJob()">Submit</button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
