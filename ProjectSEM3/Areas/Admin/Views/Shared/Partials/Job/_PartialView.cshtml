@using ProjectSEM3.Models.Entities;

@{
    var data = Model as List<Job.Res>;
}

@if (data == null || data.Count() <= 0)
{
    <h3>No records found.</h3>
}

else
{
    <div class="mt-3">
        <table id="jobTable" class="table table-striped table-hover">
            <thead class="text-bg-dark">
                <tr colspan="6">
                    <th style="width:5%">#</th>
                    <th style="width:20%">Tittle</th>
                    <th style="width:20%">Location</th>
                    <th style="width:10%">Posted Date</th>
                    <th style="width:10%">End Date</th>
                    <th style="width:10%">Salary</th>
                    <th style="width:5%">Status</th>
                    <th style="width:15%">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var index = 1;
                }
                @foreach (var item in data)
                {
                    <tr>
                        <td>@index@{index++;}</td>
                        <td><a href="@item.JobLink">@item.Title</a></td>
                        <td>@item.Location</td>
                        <td>@item.PostedDate</td>
                        <td>@item.EndDate</td>
                        <td>@item.Salary</td>
                        <td><span class="@item.StatusType.BadgeCss">@item.StatusType.Name</span></td>
                        <td>
                            @{
                                var json = Newtonsoft.Json.JsonConvert.SerializeObject(item);
                            }
                            <i class="fa-solid fa-pen-to-square fa-2x pointer" style="color:forestgreen" data-bs-toggle="modal" data-bs-target="#updateJob" data-index="@item.Id" data-job="@json" onclick="OnSelectRowJob(event)"></i>
                            <i class="fa-sharp fa-solid fa-circle-info fa-2x pointer ms-3" style="color: dodgerblue;" data-bs-toggle="modal" data-bs-target="#infoJob" data-job="@json" onclick="OnViewJob(event)"></i>
                            @if (@item.StatusType.IsHidden)
                            {
                                <i class="fa-solid fa-trash-can fa-2x pointer ms-3" style="color: red;" data-index="@item.Id" data-job="@json" onclick="OnChangeJobStatus(event)" hidden></i>
                            }
                            else
                            {
                                <i class="fa-solid fa-trash-can fa-2x pointer ms-3" style="color: red;" data-index="@item.Id" data-job="@json" onclick="OnChangeJobStatus(event)"></i>
                            }
                        </td>
                    </tr>


                }
            </tbody>
        </table>
    </div>
}
@Html.Partial("~/Areas/Admin/Views/Shared/Partials/Job/_PartialUpdate.cshtml")
@Html.Partial("~/Areas/Admin/Views/Shared/Partials/Job/_PartialInfo.cshtml")

