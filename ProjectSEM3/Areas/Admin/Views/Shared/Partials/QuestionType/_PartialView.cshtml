@using ProjectSEM3.Models.Entities;

@{
    ViewBag.Title = "Question";
    var data = ViewBag.QuestionType as List<ProjectSEM3.Models.Entities.QuestionType.Res>;
}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-1">
            <span><b>Name</b> <i style="color:red">*</i></span>
        </div>
        <div class="col-4">
            <input class="form-control p-1" id="id" type="text" hidden>
            <input class="form-control p-1" id="name" type="text">
        </div>
        <div class="col-2">
            <button class="main-btn btn-sm primary-btn btn-hover" onclick="OnSubmitQuestionType()">Submit</button>
        </div>
    </div>
</div>

@if (data == null || data.Count() <= 0)
{
    <h3>No records found.</h3>
}
else
{
    <div class="mt-3">
        <table id="questionTypeTable" class="table table-striped table-hover">
            <thead class="text-bg-dark">
                <tr colspan="6">
                    <th style="width:5%">#</th>
                    <th style="width:20%">Name</th>
                    <th style="width:20%">Status</th>
                    <th style="width:20%">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var index = 1;
                }
                @foreach (var item in data)
                {
                    <tr>
                        <td>@index@{index++;}</td>
                        <td>@item.Name</td>
                        <td><span class="@item.StatusType.BadgeCss">@item.StatusType.Name</span></td>
                        <td>
                            @{
                                var json = Newtonsoft.Json.JsonConvert.SerializeObject(item);
                            }
                            <i class="fa-solid fa-pen-to-square fa-2x pointer" style="color:forestgreen" data-bs-toggle="modal" data-bs-target="#updateHr" data-index="@item.Id" data-questionType="@json" onclick="OnSelectRowQuestionType(event)"></i>
                            @if (@item.StatusType.IsHidden)
                            {
                                <i class="fa-solid fa-rotate fa-2x pointer ms-3" style="color: dodgerblue;" data-index="@item.Id" data-questionType="@json" onclick="OnChangeQuestionTypeStatus(event)" hidden></i>
                            }
                            else
                            {
                                <i class="fa-solid fa-rotate fa-2x pointer ms-3" style="color: dodgerblue;" data-index="@item.Id" data-questionType="@json" onclick="OnChangeQuestionTypeStatus(event)"></i>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


