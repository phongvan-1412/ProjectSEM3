@{
    ViewBag.Title = "Login";
}

<div class="card container text-white bg-dark" style="width:700px;margin-left:150px">
    <div class="row">
        <h1 class="mt-2 mb-3 text-white" style="font-size: 40px">Login</h1>

        <div class="container col-md-6 col-lg-6">
            <form action="/admin/home/Login" method="post">
                <div class="form-group has-placeholder mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="Email" class="form-control" placeholder="Email" required="" />
                </div>

                <div class="form-group has-placeholder mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" name="Password" class="form-control" placeholder="Password" required="" />
                </div>

                <div class="d-flex  form-group mb-3">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
                <div style="color:red;margin-left:10px">@ViewBag.ResultLogin</div>
            </form>
        </div>
    </div>
</div>


